#!/usr/bin/env node
/**
 * A tool for executing all of the `acceptance-tests` tests and formatting
 * their results into grokkable output.
 */

var processArguments = require('../lib/processArguments');
var execTestSuites = require( '../lib/exec_test_suites.js' );

(function runTests(){
  var config = processArguments.getConfig();

  var callback = function(results) {
	config.outputGenerator(results);
  };

  execTestSuites( config.apiUrl, config.endpoint, config.testSuites, callback, config.testType );
})();
